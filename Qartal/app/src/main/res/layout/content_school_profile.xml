<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".School.SchoolEditProfileActivity"
    tools:showIn="@layout/activity_school_edit_profile">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                style="@style/headerText"
                android:text="Account Info"
                android:layout_marginBottom="20dp"/>

            <RelativeLayout style="@style/profileDetailsLayout">
                <ImageView
                    android:id="@+id/nameImageView_school"
                    android:src="@drawable/ic_person_24dp"
                    style="@style/profileDetailsImage" />

                <TextView
                    android:text="Name"
                    android:layout_toRightOf="@id/nameImageView_school"
                style="@style/profileDetailsTextMain" />

                <TextView
                    android:id="@+id/nameTextView_school"
                    android:text="developer"
                    android:layout_toRightOf="@id/nameImageView_school"
                    style="@style/profileDetailsMiniText" />

                <ImageView
                    android:id="@+id/edit_name_school"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_edit_24dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp" />

            </RelativeLayout>

            <View style="@style/proifleDetailsView" />
            <RelativeLayout style="@style/profileDetailsLayout">
                <ImageView
                    android:id="@+id/mobileImageView_school"
                    android:src="@drawable/ic_phone_iphone_black_24dp"
                    style="@style/profileDetailsImage" />

                <TextView
                    android:text="Mobile"
                    android:layout_toRightOf="@id/mobileImageView_school"
                    style="@style/profileDetailsTextMain"/>

                <TextView
                    android:id="@+id/phoneTextView_school"
                    android:text="+91-8129999999"
                    android:layout_toRightOf="@id/mobileImageView_school"
                    style="@style/profileDetailsMiniText" />

                <ImageView
                    android:id="@+id/edit_phone_school"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_edit_24dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp" />

            </RelativeLayout>

            <View style="@style/proifleDetailsView" />
            <RelativeLayout style="@style/profileDetailsLayout">
                <ImageView
                    android:id="@+id/emailImageView_school"
                    android:src="@drawable/ic_email_24dp"
                    style="@style/profileDetailsImage" />

                <TextView
                    android:text="Email"
                    android:layout_toRightOf="@id/emailImageView_school"
                    style="@style/profileDetailsTextMain" />

                <TextView
                    android:id="@+id/emailTextView_school"
                    android:text="developer@watch.com"
                    android:layout_toRightOf="@id/emailImageView_school"
                    style="@style/profileDetailsMiniText" />

                <ImageView
                    android:id="@+id/edit_email_school"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_edit_24dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp" />

            </RelativeLayout>

            <View style="@style/proifleDetailsView" />
            <RelativeLayout style="@style/profileDetailsLayout">
                <ImageView
                    android:id="@+id/addressImageView_school"
                    android:src="@drawable/location_nav_to"
                    style="@style/profileDetailsImage" />

                <TextView
                    android:text="Address"
                    android:layout_toRightOf="@id/addressImageView_school"
                    style="@style/profileDetailsTextMain" />

                <TextView
                    android:id="@+id/addressTextView_school"
                    android:text="istanbul 2nd Street Irbid Jordan."
                    android:layout_toRightOf="@id/addressImageView_school"
                    style="@style/profileDetailsMiniText" />

                <ImageView
                    android:id="@+id/edit_address_school"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_edit_24dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp" />

            </RelativeLayout>

            <View style="@style/proifleDetailsView" />
            <RelativeLayout style="@style/profileDetailsLayout">
                <ImageView
                    android:id="@+id/passwordImageView_school"
                    android:src="@drawable/ic_lock_24dp"
                    style="@style/profileDetailsImage" />

                <TextView
                    android:text="Password"
                    android:layout_toRightOf="@id/passwordImageView_school"
                    style="@style/profileDetailsTextMain" />

                <TextView
                    android:id="@+id/passwordTextView_school"
                    android:text="**************"
                    android:layout_toRightOf="@id/passwordImageView_school"
                    style="@style/profileDetailsMiniText" />

                <ImageView
                    android:id="@+id/edit_password_school"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_edit_24dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp" />

            </RelativeLayout>

            <View style="@style/proifleDetailsView" />

        </LinearLayout>

</androidx.core.widget.NestedScrollView>
